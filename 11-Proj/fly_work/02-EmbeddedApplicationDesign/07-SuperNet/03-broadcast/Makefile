SRC = ${wildcard *.c}
BIN = ${patsubst %.c, %, $(SRC)}
CFLAGS = -g -Wall

all:$(BIN)

$(BIN):%:%.c
	$(CC) $(CFLAGS) -o $@ $^

clean:
	$(RM) $(BIN) .*.sw?

.PHONY:all clean


##################################################################
#以C类网段192.168.1.X为例，其中最小地址192.168.1.0代表该网段；
#192.168.1.255代表该网段中的广播地址。当我们向这个地址发送数据包时
#，该网段中所有的主机都会接受并处理；
#注意：发送广播包时，目标IP为广播地址而目标MAC为ff:ff:ff:ff:ff:ff
